{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "types": ["jest"]
  },
  "exclude": ["node_modules", "lib"]
}
